<AnchorPane prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fh.swei.PrimaryController">
   <children>
      <VBox alignment="CENTER" layoutX="609.0" layoutY="50.0" prefHeight="494.0" prefWidth="281.0" spacing="20.0">
         <children>
            <Label text="Details" />
            <AnchorPane>
               <children>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Date" AnchorPane.bottomAnchor="0.0" />
                  <Text fx:id="date" layoutX="10.0" layoutY="10.0" strokeType="OUTSIDE" strokeWidth="0.0" AnchorPane.bottomAnchor="0.0" AnchorPane.rightAnchor="10.0" />
               </children>
            </AnchorPane>
            <Button fx:id="primaryButton" onAction="#switchToSecondary" text="Edit" />
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </VBox>
      <MenuBar prefWidth="900.0">
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#openFolder" text="Open Folder" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Edit">
            <items>
              <MenuItem mnemonicParsing="false" text="Delete" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <items>
              <MenuItem mnemonicParsing="false" text="About" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
      <ImageView fx:id="mainImg" fitHeight="334.0" fitWidth="572.0" layoutX="56.0" layoutY="87.0" pickOnBounds="true" preserveRatio="true">

      </ImageView>
      <Button layoutX="56.0" layoutY="495.0" mnemonicParsing="false" onAction="#prevPic" text="Previous" />
      <Button layoutX="480.0" layoutY="495.0" mnemonicParsing="false" onAction="#nextPic" text="Next" />
   </children>
</AnchorPane>
